<Window x:Class="WpfApp1.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height='180' SizeToContent="WidthAndHeight" >
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" >
            <Label Margin="20" Width="auto" Name="Text">
                
            </Label>
            <Button Content="{DynamicResource OK}" Margin="0,0,0,20" Width="50" Height="20" HorizontalAlignment="Center" Name="OkBtn" Click="OkBtn_Click"/>
        </StackPanel> 
    </Grid>
</Window>
