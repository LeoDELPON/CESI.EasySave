<Window x:Class="WpfApp1.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LanguageSelectionWindow" Height="150" Width="200" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Name ="coucou" Content="{DynamicResource SelectLanguage}" HorizontalAlignment="Center"/>
            
            <ComboBox HorizontalContentAlignment="center" x:Name="LanguageCB">
                

            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="{DynamicResource OK}" HorizontalAlignment="Center" Width="50" Margin="5,0,0,0" x:Name="OkBtn" Click="OkBtn_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
