<Window x:Class="WpfApp1.CipherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        
        Title="CypherWindow" Height="400" Width="200" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="0,0,0,-1" >
            <Label Name ="Title" Content="{DynamicResource XOR}" HorizontalAlignment="Center"/>
            <Label Content="{DynamicResource KEY}"/>
            <TextBox  Name ="keyTextBox" Text="" TextWrapping="Wrap" Width="196" RenderTransformOrigin="0.464,2.791"/>
            <Label Content="{DynamicResource EXTENSION}" Height="24"/>
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" Name="SPExtention">
                <TextBox  TextWrapping="Wrap" Width="120" Name="extentionTextBox"/>
            </StackPanel>
            <Button  Content="{DynamicResource ADDEXTENSION}" Name ="AddExtentionBoxButton"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="{DynamicResource OK}" Width="50" Name="OkBtn"  />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
